.m_mobile-menu
  background-color transparent
  border none
  &:focus
    outline none
  &:hover
    cursor pointer
  >span
    display block
    background-color $cBlack
    width 35px
    height 4px
    border-radius 8px
    transition all .4s
    &:not(:last-child)
      margin-bottom 10px
    &:nth-child(2)
      background-color crimson

// open
.menu-open
  background-color rgba($cBlack, .5)
  .section
    button.btn
      opacity .5
      pointer-events none
  .m_mobile-menu
    >span
      background-color $cWhite
      &:nth-child(1)
        transition-delay .1s
        $rad = 90
        transform translateY(14px) rotate(135deg)
      &:nth-child(2)
        background-color crimson
        transition-delay .3s
        transform translateX(18px) scaleX(0) rotate(360deg)
      &:nth-child(3)
        transition-delay .1s
        transform translateY(-14px) rotate(-135deg)

.m_mobile-menu
  background-color transparent
  border none
  &:focus
    outline none
  &:hover
    cursor pointer
  >span
    display block
    background-color $cGray
    width 35px
    height 4px
    border-radius 8px
    transition all .4s
    &:not(:last-child)
      margin-bottom 10px
    &:nth-child(2)
      background-color $cGray-light

/*---------- Nav Menu  ----------*/
.nav
  visibility hidden
  fx-c()
  // is Open Style
  ul
    position absolute
    // left 50%
    right 50%
    top 20%
    bottom 80%
    transform translate(50%, 50%)
    li
      a
        font-size 4rem
        width 100vw
        display flex
        justify-content center
        transition all $anmNormal
        &:hover
          background-color $cBlack

/*=============================================
=            Menu Open            =
=============================================*/
.nav.menu-open
  visibility visible

.overlay
  background-color rgba($cBlack, 0.5);
  visibility hidden
  position fixed
  top 0
  left 0
  width 100vw
  height 100vh
  z-index 2
  opacity 0
  transition $anmSlow
  &.menu-open
    visibility visible
    opacity 1

  +.container
    .l_menu
      z-index 10
    //  button.btn
    //   pointer-events none

.m_mobile-menu.menu-open
  >span
    background-color $cWhite
    &:nth-child(1)
      transition-delay .1s
      $rad = 90
      transform translateY(14px) rotate(135deg)
    &:nth-child(2)
      background-color $cGray
      // Action Design Menu
      // background-color gold
      // box-shadow 0 0 12px gold
      transition-delay .2s
      // Fun Anime Center Bar
      // animation bar-character 1s
      // transform translateX(18px) scaleX(0) rotate(360deg)
      // Normal Anime Center Bar
      transform translateX(18px) scaleX(0)
    &:nth-child(3)
      transition-delay .1s
      transform translateY(-14px) rotate(-135deg)

@keyframes bar-character
  0%
    transform translateY(12px)
    width 35px
  30%
    transform translateY(-12px) translateX(18px)
    width (35/2)px
    height 4px
  70%
    transform translateY(-12px) translateX(18px)
    width (35*4)px
    height 8px
  100%
    transform translateY(-12px) translateX(18px) scaleX(0) rotate(720deg)
    width (35/2)px
    height 4px
.mobile-menu-icon
  background-color transparent
  border none
  &:focus
    outline none
  &:hover
    cursor pointer
  >span
    background-color $cBlack
    width 35px
    height 2px
    display block
    transition all .4s
    &:not(:last-child)
      margin-bottom 9px

// open
.menu-open
  background-color rgba($cBlack, .5)
  .mobile-menu-icon
    >span
      background-color $cWhite
      &:nth-child(1)
        transition-delay .1s
        transform translateY(11px) rotate(135deg)
      &:nth-child(2)
        transition-delay .2s
        transform translateX(18px) scaleX(0)
      &:nth-child(3)
        transition-delay .1s
        transform translateY(-11px) rotate(-135deg)

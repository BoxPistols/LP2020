.l__anime-title
    .g__anime-title
        position relative
        background-color orange
        // shadow-default()
        shadow(12px, gray, .7)
        fx-c()
        padding 2.4rem
    .m__anime-title
        position absolute
        top 50%
        left 50%
        transform: translate(-50%, -50%)
        display inline-block
        .char
            font-family 'Jost'
            color $cWhite
            font-size 3.2rem
            letter-spacing: 4px
        &.is-anime
            .char
                display inline-block
                color: $cBlack
                animation(
                    $name: tex-animation,
                    $duration: 5s,
                    $iteration-count: infinite,
                    $fill-mode: both
                )
                for num in (1..12)
                    &:nth-child({num})
                        animation-delay (num * 1)s

    .g__anime-button
        margin-top 2.4rem

@keyframes tex-animation
    0%, 20%, 70%, 100%
        opacity 0.5
        color teal
        transform scaleY(2)
    50%
        opacity 1
        color blue
        transform scaleY(1)

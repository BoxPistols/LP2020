.m_loader-dot
  text-align center
  >.bounce
    display inline-flex
    width 16px
    height 16px
    // border 2px solid $cBlack
    background $cBlack
    border-radius 50%
    // Set Animation
    // animation loader-bounce 1.2s infinite
    animation(
      $name: loader-bounce
    )
    // TODO
    for num in (1..5)
      &:nth-child({num})
        animation-delay (num * 0.12)s
    // &.b-1
    //   animation-delay: -.32s
    // &.b-2
    //   animation-delay: -.16s

@keyframes loader-bounce
  0%
    opacity 0
    transform scale(0)
  50%
    opacity 1
    transform scale(1)
  100%
    opacity 0
    transform scale(0)


.m_loader-dot
  text-align center
  >.bounce
    display inline-flex
    width 16px
    height 16px
    background $cBlack
    border-radius 50%
    // animation loader-bounce 1.2s infinite
    animation(
      $name: loader-bounce,
      $iteration-count: infinite
    )
    for num in (1..5)
      &:nth-child({num})
        animation-delay (num * 0.12)s
    // &.b-1
    //   animation-delay: -.32s
    // &.b-2
    //   animation-delay: -.16s

.m_loader-3d
  perspective: 50px * 2
  .a_loader-3d
    margin 50px auto
    // background $cBlack
    background $gradBlue
    // gradient(red, orange, teal)
    width 50px
    height 50px
    animation(
      $name: sppier ,
      $iteration-count: infinite
    )

.m_loader-wave
  position relative
  fx-c()
  margin 2.4rem auto
  .a_loader-wave
    position absolute
    width 50px
    height 50px
    background lightgray
    border solid $cBlack
    border-radius 50%
    opacity .6
    animation(
      $name: wave ,
      $duration: 3s,
      $iteration-count: infinite
    )
    &:nth-child(2)
      border solid orange
      animation-delay 1.5s

.m_loader-rect
  margin 4.8rem auto
  width 60px
  height 30px
  text-align center
  .a_loader-rect
    display inline-block
    width 6px
    height 100%
    background $gradBlue
    animation(
      $name: wave-rect ,
      $duration: 1.2s,
      $iteration-count: infinite
    )
    for num in (1..7)
      &:nth-child({num})
        animation-delay (num * 0.12)s


/*----------  Keyframes  ----------*/

@keyframes dv_bounce
  0%,30%
    transform scale(0)
  100%
    transform scale(1)

@keyframes dv_bounce2
  0%
    background-color orange
    transform scale(0)
  100%
    background-color teal
    transform scale(1)
    border-radius 50%

@keyframes loader-bounce
  0%
    opacity 0
    transform scale(0)
  50%
    opacity 1
    transform scale(1)
  100%
    opacity 0
    transform scale(0)

@keyframes sppier
  0%
    // transform: perspective(100px) rotateX(0deg) rotateY(0deg)
    transform rotateX(0deg) rotateY(0deg)
  50%
    transform rotateX(-180deg) rotateY(0deg)
  100%
    transform rotateX(-180deg) rotateY(180deg)

@keyframes wave
  0%,  100%
    opacity 0
    transform scale(0)
    border-width 4px
  50%
    opacity 1
    transform scale(1)
    border-width 1px

@keyframes wave-rect
  0%, 20%, 70%, 100%
    // opacity 0
    transform scale(0.6)
  50%
    // opacity 1
    transform scale(1)

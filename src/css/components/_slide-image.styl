.slide-image
  &__mol
    position relative
    overflow hidden
    img.item
      width 100%
      transform scale(1)
      opacity 0
    &.inview
      img.item
        opacity 1
        animation(
          $name: key__img-zoom,
          $duration: 1.6s,
          $timing-function: ease-in-out,
          $iteration-count: 1,
          $fill-mode: normal
        )
      &:after
        animation(
          $name: key__cover-slide,
          $duration: 1.6s,
          $timing-function: ease-in-out,
          $iteration-count: 1
        )
        psd()
        background azure

@keyframes key__cover-slide
  0%
    left 0%
    right 100%
  50%
    left 0%
    right 0%
  100%
    left 100%
    right 0%

@keyframes key__img-zoom
  0%
    opacity 0
  50%
    opacity 0
  51%
    opacity 1
    transform scale(1.5)
  100%
    opacity 1
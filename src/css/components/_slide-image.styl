.slide-image
  &__mol
    position relative
    overflow hidden
    .item
      width 100%
      transform scale(1)
      opacity 0
    &.inview
      .item
        opacity 1
        animation(
          $name: key__img-zoom,
          $duration: 1.6s,
          $timing-function: ease-in-out,
          $iteration-count: 1,
          $fill-mode: normal
        )
        transition $anmSlow ease-in-out
        &:hover
          cursor pointer
          transform scale(1.3)

      .bg-img-zoom
        overflow hidden
        margin-top 2rem
        background-image url('https://dummyimage.com/1200x600/4794b8/fff.jpg')
        background-size cover
        background-repeat no-repeat
        background-position center
        width 100%
        // height 200px
        padding-top 50%

        animation(
          $name: key__img-zoom,
          $duration: 1.6s,
          $timing-function: ease-in-out,
          $iteration-count: 1,
          $fill-mode: normal
        )

        &:after
          animation(
            $name: key__cover-slide,
            $duration: 1.6s,
            $timing-function: ease-in-out,
            $iteration-count: 1
          )
          psd()
          background $cGray
          overflow hidden

      &:after
        animation(
          $name: key__cover-slide,
          $duration: 1.6s,
          $timing-function: ease-in-out,
          $iteration-count: 1
        )
        psd()
        background $cGray

.hover-darken
  &:before
    psd()
    width 100%
    height 100%
    z-index 2
    transition background-color $anmNormal ease
    pointer-events none
  &:hover:before
    cp()
    background-color rgba(0, 0, 0, .3)

@keyframes key__cover-slide
  0%
    left 0%
    right 100%
  50%
    left 0%
    right 0%
  100%
    left 100%
    right 0%

@keyframes key__img-zoom
  0%
    opacity 0
  50%
    opacity 0
  51%
    opacity 1
    transform scale(1.5)
  100%
    opacity 1
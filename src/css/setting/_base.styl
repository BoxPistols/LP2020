*
  margin 0
  padding 0
  box-sizing border-box

html
  font-size 62.5%

body
  font-size 1.6rem
  color $cBlack
  // font-family 'Comfortaa', cursive
  font-family 'Comfortaa', "ヒラギノ角ゴ Pro W3", "Hiragino Kaku Gothic Pro", "メイリオ", Meiryo, Osaka, "ＭＳ Ｐゴシック", "MS PGothic", sans-serif;
  overflow-x hidden

a
  text-decoration none
  color $cWhite
  transition .3s
  &:hover
    color tomato

li
  line-height 2
  list-style none

p
  line-height 1.5

img
  max-width 100%
  // max-width: calc(100% / 3)
  vertical-align: bottom

.wrap
  min-height 100vh
  padding 24px

.content
  margin-bottom 2.4rem
  padding 2.4rem
  // background lighten(lightgray, 80%)
  .section
    margin 2.4rem

.footer_org
  display block
  width 100%
  position fixed
  bottom 0
  padding .8rem
  background rgba($cGray,.2)
  fx-c()
  .footer_mol
    color $cGray
    text-align center
    font-size 1.2rem

header
  fx-jc-e()
  margin-bottom 1.6rem

cap.cap
  display block
  color $cGray
  line-height 2
  padding .4rem
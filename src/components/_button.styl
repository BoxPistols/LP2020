  /* Button UI hover Interaction w before */
  &.slide-bg
    position relative
    overflow hidden
    background $cWhite
    z-index 1
    cursor pointer
    &:before
      content ""
      border-radius 0
      position absolute
      top 0
      left 0
      display inlin-block
      width 100%
      height 100%
      transition all $anmFast
      transform translateX(-100%)
      z-index -1
    &:hover
      color $cWhite
      &:before
        background $cGray
        transform none
    &:focus
      outline: none
      border 2px solid lightblue
      position relative
      &:after

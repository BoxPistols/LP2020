
/* Button UI */
$btnRadius = calc(1.2rem * 4)

btnBefore()
  content ""
  position absolute
  top 0
  left 0
  display inlin-block
  width 100%
  height 100%
  border-radius 0
  transition all $anmFast
  z-index -1

button.btn
  position relative
  font-size 1.6rem
  height 4rem
  width 16rem
  background $cWhite
  border-radius calc(1.2rem * 4)
  border .2rem solid $cBlack
  // transition color 1s ease .2s, background 2s ease 1s
  box-shadow 4px 4px 8px 0px rgba($cBlack, .5)
  transition all $anmNormal

  overflow hidden
  z-index 1
  cursor pointer

  /* Button UI hover Normal */
  &.float
    &:hover
      cursor pointer
      color $cWhite
      background $cBlack
      // box-shadow 8px 8px 15px 0px rgba($cBlack, .7)
      box-shadow 2px 2px 5px 0px rgba($cBlack, .1)
      border-width 0
      transform translate(2px, 2px)
    &:focus
      outline: none
      border 2px solid lightblue

  /* Button UI hover Interaction w span.tx*/
  &.slide-bgTx
    &:before
      btnBefore()
      transform translateX(-100%)
    span.tx
      position absolute
      transform translate(-50%,-50%)
    &:hover
      color $cWhite
      &:before
        background $cGray
        transform none
    &:focus
      outline: none
      border 2px solid lightblue

  /* Button UI hover Interaction w before */
  &.slide-bg
    &:before
      btnBefore()
      transform translateX(-100%)
    &:hover
      color $cWhite
      &:before
        background $cGray
        transform none
    &:focus
      outline: none
      border 2px solid lightblue
      position relative
    &.tip
      &:focus
        &:after
          content " Send!"
          font-size 1.2rem
          color orange
          // position absolute
          // top: 1.2rem
          // right: 1.2rem

  /* Button UI hover Interaction 3D */
  &.cover-3d
    &:before
      btnBefore()
      transform translateX(-100%)
      z-index -1
    &:hover
      color $cWhite
      &:before
        background $cGray
        transform none
    &:focus
      outline: none
      border 2px solid lightblue
      position relative
